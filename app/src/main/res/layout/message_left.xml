<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/msglayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  android:background="@color/bgclr"
    android:orientation="vertical"
    android:padding="2dp"
    android:paddingLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="vertical"

        android:padding="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="2"
            android:layout_marginRight="5dp"
            android:layout_gravity="top"

            android:layout_marginLeft="5dp"
            android:src="@drawable/person"
            app:civ_border_color="@color/black" />

        <LinearLayout
            style="@style/msgRtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginRight="5dp"
            android:layout_weight="10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUserName"
                style="@style/nametxt"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txtmsghead"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/txtclr"
                android:padding="5dp"
                android:text=""
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/rectangle2"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:visibility="gone" />

        </LinearLayout>
        <ImageButton
            android:id="@+id/imgSpeak"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@color/bgclr1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_speak"
            />
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:padding="1dp">

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_weight="1"
        android:layout_marginLeft="45dp"
        android:layout_gravity="start"

        style="@style/lighttxt"
        android:textSize="12sp" />

        <TextView
            android:id="@+id/txtIsSeen"
            style="@style/lighttxt"
            android:paddingLeft="40dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="3dp"
            android:text=""
 />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/txtMsgDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="2dp"
        android:layout_gravity="center_horizontal"
        style="@style/lighttxt"
        android:textSize="12sp" />
</LinearLayout>
